<Application x:Class="ShapeConverter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Shell\Main\MainWindow.xaml">
    <Application.Resources>
        <!--
            unfortunately we need to include all styles here
            a separate styles.xaml in the Shell/Styles folder doesn't work
            without further effort
        -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Shell/Styles/Colors.xaml" />
                <ResourceDictionary Source="Shell/Styles/Icons.xaml" />
                <ResourceDictionary Source="Shell/Styles/Converter.xaml" />
                <ResourceDictionary Source="Shell/Styles/TextBox.xaml" />
                <ResourceDictionary Source="Shell/Styles/TabControl.xaml" />
                <ResourceDictionary Source="Shell/Styles/Button.xaml" />
                <ResourceDictionary Source="Shell/Styles/RadioButton.xaml" />
                <ResourceDictionary Source="Shell/Styles/ToggleButton.xaml" />
                <ResourceDictionary Source="Shell/Styles/CheckBox.xaml" />
                <ResourceDictionary Source="Shell/Styles/Header.xaml" />
                <ResourceDictionary Source="Shell/Styles/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
