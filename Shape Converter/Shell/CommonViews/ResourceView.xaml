<UserControl x:Class="ShapeConverter.Shell.CommonViews.ResourceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <CheckBox Margin="10,11,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Content="Normalize"
                  IsChecked="{Binding Normalize}"
                  ToolTip="Normalize to Range 0..100" />

        <TextBlock Margin="113,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="Type:"
                   TextWrapping="Wrap" />
        <ComboBox Margin="140,7,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  DisplayMemberPath="Label"
                  ItemsSource="{Binding GeometryTypeItems}"
                  SelectedItem="{Binding SelectedGeometryTypeItem}" />
        <Label Margin="0,9,40,0"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Content="{Binding ColorPrecisionMessage}"
               Style="{StaticResource ColorPrecisionLabelStyle}" />
        <Button Margin="0,7,6,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding CopyToClipboard}"
                Style="{StaticResource CopyButtonStyle}" />
        <Rectangle Grid.ColumnSpan="2"
                   Height="1"
                   Margin="0,37,0,0"
                   VerticalAlignment="Top"
                   Fill="{StaticResource ParameterDeviderBrush}" />
        <TextBox x:Name="SourceCode"
                 Grid.ColumnSpan="2"
                 Margin="0,38,0,0"
                 FontFamily="Consolas"
                 HorizontalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Style="{StaticResource BorderlessTextBoxStyle}"
                 Text="{Binding SourceCode}"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
